@page
@model HotelWebApp.Pages.ReservationsModel

<style>
    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        .container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .container table {
            width: 100%;
            border-collapse: collapse;
        }

        .container table, .container th, .container td {
            border: 1px solid #ddd;
        }

        .container th, .container td {
            padding: 12px;
            text-align: left;
        }

        .container th {
            background-color: #007bff;
            color: white;
        }

        .container tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .container tr:hover {
            background-color: #ddd;
        }

        .container a {
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .container a:hover {
                color: #0056b3;
            }

    .no-bookings {
        text-align: center;
        color: #555;
        margin-top: 20px;
    }

    .new-booking {
        text-align: center;
        margin-bottom: 20px;
    }

        .new-booking a {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .new-booking a:hover {
                background-color: #0056b3;
            }
</style>

<div class="container">
    <div class="new-booking">
        <a asp-page="RoomQuestion">New booking</a>
    </div>

    @if (Model.Reservation.Count == 0)
    {
        <p class="no-bookings">No bookings found for the current user.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Reservation[0].Room)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reservation[0].CheckInDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reservation[0].CheckOutDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservation)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckInDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckOutDate)
                        </td>
                        <td>
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
